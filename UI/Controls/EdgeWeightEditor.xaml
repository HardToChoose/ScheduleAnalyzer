<c:ValueEditorBase x:Class="UI.Controls.EdgeWeightEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             xmlns:c="clr-namespace:GraphVisual.Controls;assembly=GraphVisual">
    <DockPanel>
        <TextBlock
            DockPanel.Dock="Left"
            Margin="0,0,8,0"
            VerticalAlignment="Center"
            
            FontSize="13"
            Text="Вага ребра:" />
        <TextBox x:Name="PerformanceTextBox"
            DockPanel.Dock="Right"
            VerticalAlignment="Stretch"
            
            FontSize="14"
            Width="60"
            Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}" />
    </DockPanel>
</c:ValueEditorBase>
